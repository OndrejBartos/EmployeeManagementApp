<Window x:Class="EmployeeManagementWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementWPF" 
        xmlns:usercontrols="clr-namespace:EmployeeManagementWPF.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <StackPanel VerticalAlignment="Center">
        <usercontrols:CustomTextBox x:Name="usernameBox" Width="300" Label="Username" IsPassword="False"></usercontrols:CustomTextBox>
        <usercontrols:CustomTextBox x:Name="passwordBox" Margin="0 20 0 0" Width="300" Label="Password" IsPassword="True"></usercontrols:CustomTextBox>
        <Button Width="300" Height="70" FontSize="30" Margin="0 30 0 0" Click="Button_Click">Login</Button>
    </StackPanel>
</Window>
